<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity"
    android:background="@drawable/officialbackground">

    <ImageView
        android:id="@+id/LeftStarFive"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/tStore"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star"
        app:tint="#FFFF00"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/tStore"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star"
        app:tint="#FFFF00"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/UnderLineOne"
        android:layout_width="190dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:background="#CC5500"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tStore" />

    <TextView
        android:id="@+id/tStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="@string/store"
        android:textColor="#FFFF00"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bRemoveAds"
        android:layout_marginStart="96dp"
        android:layout_marginTop="88dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button_orange"
        android:text="@string/remove_ads_500g"
        android:textColor="#FFFF00"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UnderLineOne" />

    <Button
        android:id="@+id/bBackgrounds"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/round_button_orange"
        android:text="@string/backgrounds"
        android:textColor="#FFFF00"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bRemoveAds" />


</androidx.constraintlayout.widget.ConstraintLayout>