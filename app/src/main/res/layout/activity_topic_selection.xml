<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topic_selection"
    android:background="@drawable/greybackground">

    <TextView
        android:id="@+id/tSelectATopic"
        android:layout_width="166dp"
        android:layout_height="34dp"
        android:layout_marginTop="100dp"
        android:text="@string/select_a_topic"
        android:textColor="#FAF500"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BottomLineThree"
        android:layout_width="198dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_line_button"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tSelectATopic" />

    <Button
        android:id="@+id/TopLineThree"
        android:layout_width="198dp"
        android:layout_height="6dp"
        android:background="@drawable/btn_line_button"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/tSelectATopic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/bFruit"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/round_button"
        android:textColor="#FAF500"
        android:text="@string/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BottomLineThree" />

    <Button
        android:id="@+id/bFastFood"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_button"
        android:text="FastFood"
        android:textColor="#FAF500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bFruit" />

    <Button
        android:id="@+id/bAndroidIcons"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/round_button"
        android:text="B"
        android:textColor="#FAF500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bFastFood" />

    <ImageView
        android:id="@+id/WeirdStarLeftOne"
        android:layout_width="69dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="@+id/bAndroidIcons"
        app:layout_constraintEnd_toStartOf="@+id/bAndroidIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_compass"
        app:tint="#FAF500"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/WeirdStarRightOne"
        android:layout_width="80dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/bAndroidIcons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bAndroidIcons"
        app:srcCompat="@android:drawable/ic_menu_compass"
        app:tint="#FAF500"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>