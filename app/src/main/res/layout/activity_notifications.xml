<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifications"
    android:background="@drawable/officialbackground">

    <Button
        android:id="@+id/AboveTitleLine"
        android:layout_width="160dp"
        android:layout_height="6dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:background="#CC5500"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tNotifications" />

    <Button
        android:id="@+id/BelowTitleLine"
        android:layout_width="160dp"
        android:layout_height="6dp"
        android:layout_marginStart="116dp"
        android:background="#CC5500"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/tNotifications"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="64dp"
        android:text="@string/notifications"
        android:textColor="#FFFF00"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bClearAll"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/round_button_orange"
        android:text="@string/clear_all"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>